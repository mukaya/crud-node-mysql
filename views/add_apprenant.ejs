<%- include ('./includes/header') %> 
<div class="container">
    <h1><%= title %> </h1>
    <form action="/add" method="post" autocomplete="off">
    <div class="form-group">
        <label for="nom">Nom</label>
        <input type="text" class="form-control" id="nom" name="nom">
      </div>
      <div class="form-group">
        <label for="lien">Prénom</label>
        <input type="text" class="form-control" id="prenom" name="prenom">
      </div>
      <div class="form-group">
        <label for="type">Option</label>
        <select class="form-control" id="statut" name="option">
          <option value="Réferent-digital">Réferent digital</option>
          <option value="Développeur">Développeur web et web mobile</option>
        </select>
      </div>
      <div class="form-group">
          <button type="submit" class="btn btn-primary">ENREGISTRER</button>
      </div>
    </form>
    <a class="btn btn-primary" href="/">liste des apprenants</a>
</div>
<%- include ('./includes/footer') %> 
