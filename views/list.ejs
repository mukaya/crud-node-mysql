<%- include('./includes/header') %> 
<div class="container">
    <h1>Liste de apprenants</h1>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <td>NOM</td>
                <td>PRENOM</td>
                <td>OPTION</td>
                <td>ACTION</td>
            </tr>
        </thead>
        <tbody>
           <% for (element of apprenants) { %>
            <tr>
                <td><%= element.nom %> </td>
                <td><%= element.prenom %> </td>
                <td><%= element.optionApp %> </td>
                <td>
                    <a href="/delete/<%= element.id %> " class="btn btn-danger">Supprimer</a>
                </td>
              </tr>
           <% } %>
        </tbody>
    </table>
    <a class="btn btn-primary" href="/add">Ajouter un apprenant</a>
</div>

<%- include('./includes/footer') %> 
